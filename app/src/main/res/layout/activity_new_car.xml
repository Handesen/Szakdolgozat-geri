<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.asztalos.szakdolgozat.NewCar"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_modell_name"
            android:layout_weight="1"
            android:hint="Modell neve"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_modell_type"
            android:layout_weight="1"
            android:hint="Modell tipusa"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_licence_plate"
            android:layout_weight="1"
            android:hint="Rendszáma"
            android:singleLine="true"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_vin"
            android:layout_weight="1"
            android:hint="Alvázszám"
            android:singleLine="true"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_motor_number"
            android:layout_weight="1"
            android:hint="Motorszám"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_eng_cap"
            android:layout_weight="1"
            android:hint="Motor mérete (ccm)"
            android:singleLine="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_fueltype"
            android:layout_weight="1"
            android:entries="@array/uzemanyag" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_km"
            android:layout_weight="1"
            android:hint="Kilométeróra állása"
            android:inputType="number"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_avg_fuel"
            android:layout_weight="1"
            android:hint="Átlagos fogyasztás"
            android:singleLine="true" />

        <Button
            android:text="Hozzáadás"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>